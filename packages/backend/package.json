    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "joi": "^17.12.2",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "winston": "^3.11.0",
    "typescript": "^5.3.3",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.19",
    "@types/cors": "^2.8.17",
    "@types/express-session": "^1.18.0",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/pg": "^8.11.10"
